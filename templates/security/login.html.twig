{% extends 'base.html.twig' %}

{% block title %}TABLES
{% endblock %}

{% block body %}
<div class="d-flex flex-row-reverse">
<a href="{{ path('user_new') }}" class="btn btn-secondary btn-lg m-3 border border-primary">S'inscrire</a>
</div>
	<div class="login container">
		<div class="row justify-content-center">
			<div class="col-12 col-sm-10 col-md-9 col-lg-8 col-xl-7 py-3 px-0">
				<form method="post" class="container mx-auto d-flex flex-column align-items-center">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}


					<h1 class="mb-3">Connexion</h1>
					<label for="inputUsername">Pr√©nom</label>
					<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-3" autocomplete="username" required autofocus>
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="btn btn-lg btn-primary" type="submit">
						Go !
					</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
