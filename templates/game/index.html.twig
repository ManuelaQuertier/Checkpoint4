{% extends 'base.html.twig' %}

{% block title %}Tables de multiplications
{% endblock %}

{% block body %}
{{ include( '/_navBar.html.twig') }}

	<div class="container mt-5 default d-flex flex-column">
		<div class="row mt-5">
			<h1 class="text-center">Tables de multiplications</h1>
		</div>
		<div class="row mt-5">
			{% for table in tables %}
				<div class="col d-flex justify-content-center text-center m-2">
					<div class="card bg-primary text-center d-flex flex-column align-items-center pt-5" style="width: 18rem;">
						<h1 class="number rounded rounded-circle py-4 px-5">{{ table.id }}</h1>
						<div class="card-body d-flex align-items-center">
							<a class="link-primary btn bg-secondary btn-lg" href="{{ path('game_show', {'id': table.id}) }}">{{ table.name }}</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
