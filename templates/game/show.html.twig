{% extends 'base.html.twig' %}

{% block title %}Tables de multiplications
{% endblock %}

{% block body %}
	{{ include( '/_navBar.html.twig') }}
	<div class="container mt-5 default d-flex flex-column">
		<div class="row bg-primary text-center pt-4">
			<h1>{{ operation.operation }}
				=
			</h1>
			<div class="text-primary" id="res">{{ operation.result.result }}</div>
		</div>
		<div class="row justify-content-center mt-5">
			{% for item in operations %}
				<div class="test col-3 text-center m-2 btn btn-secondary py-4">
					{{ item.result.result }}
				</div>
			{% endfor %}
		</div>
		<div class="row mt-5 mx-auto">
			<a href="{{ path('game') }}" class="link-primary btn bg-secondary btn-lg">
				Retour aux tables
			</a>
		</div>
	</div>
{% endblock %}
